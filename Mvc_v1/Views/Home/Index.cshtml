<div class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="margin-top: 200px;">
            <div class="modal-header">
                <h5 class="modal-title">Log In</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="Username" id="usernametxt" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password"
                               placeholder="PAssword" id="password" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link btn btn-outline-primary" })
                @Html.ActionLink("Close", "Index", "Home", routeValues: null, htmlAttributes: new { id = "homeLink", @class = "nav-link btn btn-outline-warning" })
            </div>
        </div>
    </div>
</div>